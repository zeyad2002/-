    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>حساب عدد </title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 20px;
        }
        input {
            padding: 10px;
            margin: 5px;
            width: 200px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
        #result {
            margin-top: 20px;
            font-size: 20px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1> </h1>
    <form id="brickCalculator">
        <label>عدد الطول</label>
        <input type="number" id="length" placeholder="عدد الطول (م)" required><br>
        <label>عدد العرض</label>
        <input type="number" id="width" placeholder="عدد العرض (م)" required><br>
        <label>عدد الصفوف</label>
        <input type="number" id="rows" placeholder="عدد الصفوف" required><br>
        <button type="button" onclick="calculateBricks()">احسب</button>
    </form>
    <h2 id="result"></h2>

    <script>
        function calculateBricks() {
            const length = parseFloat(document.getElementById('length').value);
            const width = parseFloat(document.getElementById('width').value);
            const rows = parseInt(document.getElementById('rows').value);

            if (isNaN(length) || isNaN(width) || isNaN(rows)) {
                alert('من فضلك ادخل كل القيم بشكل صحيح!');
                return;
            }

            const totalBricks = length * width * rows;
            document.getElementById('result').innerText = `العدد المطلوب: ${totalBricks}`;
        }
    </script>
</body>
